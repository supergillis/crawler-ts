{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "dist/cjs"
  },
  "include": ["src/**/*"]
}
